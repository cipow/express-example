<!DOCTYPE html>
<html lang="en">
	<head>
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
		<meta charset="utf-8" />
		<title>Profil | Edit | <%=Data.username%></title>

		<meta name="description" content="" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
		<%- include('layout/css.ejs') %>
		<link rel="stylesheet" href="assets/css/bootstrap-datepicker3.min.css" />
	</head>

	<body class="no-skin">
		<%- include('layout/navbar') %>

		<div class="main-container ace-save-state" id="main-container">
			<%- include('layout/sidebar') %>

			<div class="main-content">
				<div class="main-content-inner">
					<div class="breadcrumbs ace-save-state" id="breadcrumbs">
						<ul class="breadcrumb">
							<li>
								<i class="ace-icon fa fa-home home-icon"></i>
								<a href="/">Dashboard</a>
							</li>

							<li class="active">Edit Profil</li>
						</ul><!-- /.breadcrumb -->
					</div>

					<div class="page-content">
						<div class="row">
							<div class="col-xs-12">
								<!-- PAGE CONTENT BEGINS -->
								<div class="row">
									<div class="col-xs-12 col-sm-8">
										<form class="form-horizontal" action="/edit/profil" method="post" role="form">
											<div class="form-group">
												<label class="col-sm-3 control-label no-padding-right" for="username"> Username </label>

												<div class="col-sm-9">
													<input name="username" type="text" id="username" placeholder="Username" class="col-xs-10 col-sm-5" value="<%=Data.username%>" />
												</div>
											</div>

											<div class="form-group">
												<label class="col-sm-3 control-label no-padding-right" for="email"> Email </label>

												<div class="col-sm-9">
													<input name="email" type="email" id="email" placeholder="Email" class="col-xs-10 col-sm-5" value="<%=Data.email%>" />
												</div>
											</div>

											<div class="form-group">
												<label class="col-sm-3 control-label no-padding-right" for="nama_depan"> Nama Depan </label>

												<div class="col-sm-9">
													<input name="nama_depan" type="text" id="nama_depan" placeholder="Nama Depan" class="col-xs-10 col-sm-5" value="<%=Data.nama.depan%>" />
												</div>
											</div>

											<div class="form-group">
												<label class="col-sm-3 control-label no-padding-right" for="nama_belakang"> Nama Belakang </label>

												<div class="col-sm-9">
													<input name="nama_belakang" type="text" id="nama_belakang" placeholder="Nama Belakang" class="col-xs-10 col-sm-5" value="<%=Data.nama.belakang%>" />
												</div>
											</div>

											<div class="form-group">
												<label class="col-sm-3 control-label no-padding-right" for="t"> Tempat Lahir </label>

												<div class="col-sm-9">
													<input name="t" type="text" id="t" placeholder="Tempat Lahir" class="col-xs-10 col-sm-5" value="<%=Data.ttl.t%>" />
												</div>
											</div>

											<div class="form-group">
												<label class="col-sm-3 control-label no-padding-right" for="tl"> Tanggal Lahir </label>

												<div class="col-xs-10 col-sm-4">
													<div class="input-group">
														<input name="tl" id="tl" class="form-control date-picker" type="text" data-date-format="yyyy-mm-dd" placeholder="Tanggal Lahir" value="<%=moment(Data.ttl.tl).format('YYYY-MM-DD')%>" />
														<span class="input-group-addon">
															<i class="fa fa-calendar bigger-110"></i>
														</span>
													</div>
												</div>
											</div>

											<div class="form-group">
												<label class="col-sm-3 control-label no-padding-right" for="t"> Jenis Kelamin </label>

												<div class="col-sm-9">
													<input class="ace" type="radio" name="gender" value="Pria" <%if(Data.gender=='Pria'){%>checked<%}%> >
													<span class="lbl bigger-120"> Pria </span>
													&nbsp;&nbsp;&nbsp;
													<input class="ace" type="radio" name="gender" value="Wanita" <%if(Data.gender=='Wanita'){%>checked<%}%>>
													<span class="lbl bigger-120"> Wanita </span>
												</div>
											</div>

											<div class="form-group">
												<label class="col-sm-3 control-label no-padding-right" for="t"> Alamat </label>

												<div class="col-sm-5">
													<span class="block input-icon input-icon-right">
														<textarea name="alamat" class="form-control" rows="6" placeholder="Alamat"><%= Data.alamat %></textarea>
													</span>
												</div>
											</div>

											<div class="clearfix form-actions">
												<div class="col-md-offset-3 col-md-9">
													<input type="hidden" name="_method" value="PUT">
													<button class="btn btn-info" type="submit">
														<i class="ace-icon fa fa-refresh bigger-110"></i>
														Update
													</button>
													&nbsp;&nbsp;&nbsp;&nbsp;
													<a href="/" class="btn btn-warning">
														<i class="ace-icon fa fa-share bigger-110"></i>
														Kembali
													</a>
												</div>
											</div>

										</form>
									</div>
								</div>
								<!-- PAGE CONTENT ENDS -->
							</div><!-- /.col -->
						</div><!-- /.row -->
					</div><!-- /.page-content -->
				</div>
			</div><!-- /.main-content -->

			<%- include('layout/footer') %>
		</div><!-- /.main-container -->

		<%- include('layout/js') %>
		<!-- Js untuk Date Picker -->
    <script src="/assets/js/bootstrap-datepicker.min.js"></script>
    <script type="text/javascript">
      jQuery(function($) {
        $('.date-picker').datepicker({
					autoclose: true,
					todayHighlight: true
				})
				.next().on(ace.click_event, function(){
					$(this).prev().focus();
				});

      });
    </script>
	</body>
</html>
