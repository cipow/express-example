<!DOCTYPE html>
<html lang="en">
	<head>
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
		<meta charset="utf-8" />
		<title>Ace Admin</title>

		<meta name="description" content="" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
		<%- include('../layout/css') %>
	</head>

	<body class="no-skin">
		<%- include('../layout/navbar') %>

		<div class="main-container ace-save-state" id="main-container">
			<%- include('../layout/sidebar') %>

			<div class="main-content">
				<div class="main-content-inner">
					<div class="breadcrumbs ace-save-state" id="breadcrumbs">
						<ul class="breadcrumb">
							<li>
								<i class="ace-icon fa fa-picture-o"></i>
								<a href="/gambar">Gambar</a>
							</li>
							<li class="active">Upload Foto</li>
						</ul><!-- /.breadcrumb -->
					</div>

					<div class="page-content">
						<div class="row">
							<div class="col-xs-12">
								<!-- PAGE CONTENT BEGINS -->
								<div class="row">
								  <div class="col-xs-12 col-sm-8">
                    <form class="form-horizontal" action="/gambar/upload" method="post" enctype="multipart/form-data">

                      <div class="row">
                        <div class="col-xs-12 col-sm-12">
                          <div class="well">
                            <img id="preview" height="100%" width="100%" />
                          </div>
                        </div>
                      </div>

											<div class="row">
                        <div class="col-xs-2 col-sm-2"></div>
                        <div class="col-xs-8 col-sm-8">
                          <input name="profil" type="file" id="foto-profil" accept="image/*" onchange="loadFile(event)" />
                        </div>
                        <div class="col-xs-2 col-sm-2"></div>
                      </div>

                      <div class="row">
                        <div class="col-xs-12 col-sm-12">
                          <div class="form-group">
    												<label class="col-sm-3 control-label no-padding-right" for="judul"> Judul </label>

    												<div class="col-sm-9">
    													<input name="judul" type="text" id="judul" placeholder="Judul" class="col-xs-10 col-sm-5" />
    												</div>
    											</div>
                        </div>
                      </div>

                      <div class="row">
                        <div class="col-xs-12 col-sm-12">
                          <div class="form-group">
    												<label class="col-sm-3 control-label no-padding-right" for="keterangan"> Keterangan </label>

    												<div class="col-sm-5">
    													<span class="block input-icon input-icon-right">
    														<textarea name="keterangan" class="form-control" rows="6" placeholder="Alamat"></textarea>
    													</span>
    												</div>
    											</div>
                        </div>
                      </div>

                      <div class="row">
                        <div class="col-xs-12 col-sm-12 center">
                          <button type="submit" class="width-35 btn btn-sm btn-primary">
                            <i class="ace-icon fa fa-cloud-upload"></i>
                            <span class="bigger-110">Upload</span>
                          </button>
                        </div>
                      </div>

                    </form>
								  </div>
								</div>
								<!-- PAGE CONTENT ENDS -->
							</div><!-- /.col -->
						</div><!-- /.row -->
					</div><!-- /.page-content -->
				</div>
			</div><!-- /.main-content -->

			<%- include('../layout/footer') %>
		</div><!-- /.main-container -->

		<%- include('../layout/js') %>
    <script type="text/javascript">


			var loadFile = function(event) {
				if (window.File && window.FileReader && window.FileList && window.Blob) {
					var reader = new FileReader();
					reader.onload = function(){
						var output = document.getElementById('preview');
						output.src = reader.result;
					};
					reader.readAsDataURL(event.target.files[0]);
				} else {
					alert('The File APIs are not fully supported in this browser.');
				}
			};

			jQuery(function($) {
				$('#foto-profil').ace_file_input({
					no_file:'Tidak Ada Gambar ...',
					btn_choose:'Pilih',
					btn_change:'Ubah',
					droppable:false,
					onchange:null,
					thumbnail:false, //| true | large
					whitelist:'gif|png|jpg|jpeg',
					blacklist:'exe|php',
				});
			});
		</script>
	</body>
</html>
